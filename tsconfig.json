{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
