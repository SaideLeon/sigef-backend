# Database URL (for Prisma Client)
POSTGRES_PRISMA_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Database URL (for migrations)
POSTGRES_URL_NON_POOLING="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=1"

# JWT Secret Key
JWT_SECRET="your-super-secret-key"

# Google OAuth Credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"

# Frontend URL (for OAuth redirects)
CLIENT_URL="http://localhost:3000"

# Google Generative AI API Key
GOOGLE_GENAI_API_KEY="your-google-genai-api-key"

# Server Port (optional, defaults to 3001)
PORT=3001
